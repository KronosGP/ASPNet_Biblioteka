@model Biblioteka.Models.Filmy

@using (Html.BeginForm("Save", "Filmy", FormMethod.Post, new { @id = "filmForm" }))
{
    @Html.AntiForgeryToken()

    <input type="hidden" id="filmId" name="Id" value="@Model.Id" />

    <div class="form-group">
        @Html.LabelFor(model => model.Tytul, htmlAttributes: new { @class = "control-label" })
        @Html.EditorFor(model => model.Tytul, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Tytul, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.DataObejrzenia, htmlAttributes: new { @class = "control-label" })
        @Html.EditorFor(model => model.DataObejrzenia, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
        @Html.ValidationMessageFor(model => model.DataObejrzenia, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
}
